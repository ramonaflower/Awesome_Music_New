<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">
        <es.claucookie.miniequalizerlibrary.EqualizerView
            android:layout_gravity="center"
            android:padding="@dimen/_7sdp"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/equalizer_view"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            custom:foregroundColor="@color/colorWhite"
            custom:animDuration="3500"/>
        <TextView
            android:id="@+id/text_song_index"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_7sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_70sdp" />
        <LinearLayout
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_name_of_song_transparent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_name_of_artist_transparent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/grey"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:id="@+id/img_move"
            android:src="@drawable/ic_more"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>