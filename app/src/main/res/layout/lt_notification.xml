<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#2e2e2e"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp">
    <ImageView
        android:id="@+id/img_notify_cover_album"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_music"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp" />
    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="@dimen/_100sdp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/text_notify_song_name"
                android:textSize="@dimen/_15ssp"
                android:text="Take A Bow"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_notify_artist_name"
                android:textSize="@dimen/_15ssp"
                android:text="Rianna"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/btn_notify_previous"
                android:src="@drawable/ic_skip_previous_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/btn_notify_play_pause"
                android:src="@drawable/ic_play_arrow_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/btn_notify_next"
                android:src="@drawable/ic_skip_next_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>